<!-- the dimensions -->

<resources>

    <!-- material design -->

    <!-- screen margin, per the Android Design guidelines. -->
    <dimen name="layout_padding">16dp</dimen>

    <dimen name="space_between_content_areas">8dp</dimen>

    <dimen name="list_item_height">72dp</dimen>

    <dimen name="status_textview_height">36dp</dimen> <!-- half the list item height -->

    <!-- widget -->

    <!-- formula: size = 70dp * number-of-cells - 30dp -->

    <!-- detail list widget -->
    <!-- max 4 cells wide x 3 cells high for now -->
    <!-- min 3 cells wide x 3 cells high for now -->
    <dimen name="widget_detail_default_width">250dp</dimen> <!-- 70 * 4 - 30 -->
    <dimen name="widget_detail_default_height">180dp</dimen> <!-- 70 * 3 - 30 -->
    <dimen name="widget_detail_min_resize_width">180dp</dimen> <!-- 70 * 3 - 30 -->
    <dimen name="widget_detail_min_resize_height">@dimen/widget_detail_default_height</dimen>
    <!-- 70 * 3 - 30 -->

    <!-- widget text sizes -->
    <dimen name="widget_detail_stock_symbol_text_size">21sp</dimen> <!-- is 25sp usually -->
    <dimen name="widget_detail_bid_price_text_size">16sp</dimen> <!-- is 20sp usually -->
    <dimen name="widget_detail_change_text_size">16sp</dimen> <!-- is 20sp usually -->

</resources>
